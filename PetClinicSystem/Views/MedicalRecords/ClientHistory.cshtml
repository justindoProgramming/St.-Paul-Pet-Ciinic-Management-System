@model List<PetClinicSystem.Models.MedicalRecord>

@{
    Layout = "~/Views/Shared/_Layout_Client.cshtml";
    ViewBag.ActiveMenu = "Dashboard"; // or "MyPets" if you prefer

    // Distinct pets for the filter dropdown
    var pets = Model
        .Where(m => m.Pet != null)
        .Select(m => m.Pet)
        .GroupBy(p => p.PetId)
        .Select(g => g.First())
        .ToList();
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold mb-1">Medical Records</h3>
            <p class="text-secondary mb-0">
                View the history of consultations, diagnoses, vaccinations and treatments
                for your pets.
            </p>
        </div>

        <div style="max-width: 260px;">
            <label class="form-label fw-semibold mb-1">Filter by pet</label>
            <select id="petFilter" class="form-select">
                <option value="">All pets</option>
                @foreach (var pet in pets)
                {
                    <option value="@pet.PetId">@pet.Name</option>
                }
            </select>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info rounded-3">
            No medical records found yet. Once your pet is seen in the clinic,
            their history will appear here.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width: 140px;">Date</th>
                        <th style="width: 140px;">Pet</th>
                        <th style="width: 200px;">Doctor / Staff</th>
                        <th>Diagnosis</th>
                        <th>Treatment</th>
                    </tr>
                </thead>
                <tbody id="recordsBody">
                    @foreach (var rec in Model)
                    {
                        <tr data-pet-id="@rec.PetId">
                            <td>@rec.Date?.ToString("MMM dd, yyyy")</td>
                            <td>@rec.Pet?.Name</td>
                            <td>@rec.Staff?.FullName</td>
                            <td>@rec.Diagnosis</td>
                            <td>@rec.Treatment</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const filter = document.getElementById("petFilter");
            const rows = document.querySelectorAll("#recordsBody tr");

            if (!filter) return;

            filter.addEventListener("change", function () {
                const selected = this.value;

                rows.forEach(function (row) {
                    const petId = row.getAttribute("data-pet-id");

                    if (!selected || petId === selected) {
                        row.classList.remove("d-none");
                    } else {
                        row.classList.add("d-none");
                    }
                });
            });
        });
    </script>
}
