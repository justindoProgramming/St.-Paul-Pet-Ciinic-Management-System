@model PetClinicSystem.Models.Prescription

@{
    var pets = ViewBag.Pets as List<PetClinicSystem.Models.Pet>;
    var staff = ViewBag.Staff as List<PetClinicSystem.Models.Account>;
    var drugs = ViewBag.Drugs as List<PetClinicSystem.Models.Drug>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">New Prescription</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="createPrescriptionForm" method="post" action="@Url.Action("CreatePrescription", "BillingPharmacy")">
    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="" disabled selected>Select patient...</option>
                    @if (pets != null)
                    {
                        foreach (var pet in pets)
                        {
                            <option value="@pet.PetId">@pet.Name (@pet.Owner.FullName)</option>
                        }
                    }
                </select>
            </div>

            <!-- DOCTOR -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Doctor</label>
                <select name="StaffId" class="form-select" required>
                    <option value="" disabled selected>Select doctor...</option>
                    @if (staff != null)
                    {
                        foreach (var doc in staff)
                        {
                            <option value="@doc.AccountId">@doc.FullName</option>
                        }
                    }
                </select>
            </div>

            <!-- LINK TO DRUG INVENTORY -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Select Drug (from Inventory)</label>
                <select name="SelectedDrugId" id="prescSelectedDrugId" class="form-select">
                    <option value="">-- Custom / Not from stock --</option>
                    @if (drugs != null)
                    {
                        foreach (var d in drugs)
                        {
                            <option value="@d.DrugId" data-name="@d.DrugName" data-stock="@d.Quantity">
                                @d.DrugName (@d.Quantity in stock)
                            </option>
                        }
                    }
                </select>
                <small id="prescDrugStockInfo" class="text-muted d-block mt-1"></small>
            </div>

            <!-- DISPENSE QUANTITY -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Dispense Quantity</label>
                <input type="number" name="DispensedQuantity" id="prescDispensedQty" class="form-control" min="1" placeholder="Units to dispense">
                <small id="prescStockLeft" class="text-muted d-block mt-1"></small>
            </div>

            <!-- MEDICATION (text) -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Medication</label>
                <input name="Medication" id="prescMedicationText" class="form-control" placeholder="Auto-filled when selecting drug" required />
            </div>

            <!-- DOSAGE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Dosage</label>
                <input name="Dosage" class="form-control" placeholder="e.g., 250mg" required />
            </div>

            <!-- FREQUENCY -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Frequency</label>
                <input name="Frequency" class="form-control" placeholder="e.g., Twice daily" required />
            </div>

            <!-- DURATION -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Duration</label>
                <input name="Duration" class="form-control" placeholder="e.g., 7 days" required />
            </div>

            <!-- NOTES -->
            <div class="col-12">
                <label class="form-label fw-semibold">Notes</label>
                <textarea name="Notes" class="form-control" rows="3" placeholder="Additional instructions..."></textarea>
            </div>

            <!-- DATE -->
            <div class="col-md-4">
                <label class="form-label fw-semibold">Date</label>
                <input type="date" name="Date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
            </div>
        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save Prescription</button>
    </div>
</form>

<!-- JavaScript logic for drug linking -->
<script>
    (function () {
        const drugSelect = document.getElementById("prescSelectedDrugId");
        const medInput = document.getElementById("prescMedicationText");
        const qtyInput = document.getElementById("prescDispensedQty");
        const stockInfo = document.getElementById("prescDrugStockInfo");
        const stockLeft = document.getElementById("prescStockLeft");

        if (!drugSelect) return;

        // When user picks a drug
        drugSelect.addEventListener("change", function () {
            const selected = this.options[this.selectedIndex];
            const name = selected.getAttribute("data-name");
            const stock = selected.getAttribute("data-stock");

            if (name) medInput.value = name;
            if (stock) {
                stockInfo.textContent = "Available stock: " + stock;
                qtyInput.max = stock;
            } else {
                stockInfo.textContent = "";
                qtyInput.removeAttribute("max");
            }
            qtyInput.value = "";
            stockLeft.textContent = "";
        });

        // When user types quantity
        qtyInput.addEventListener("input", function () {
            const stock = parseInt(drugSelect.options[drugSelect.selectedIndex]?.getAttribute("data-stock") || 0);
            const qty = parseInt(this.value || 0);
            if (stock && qty) {
                const remaining = stock - qty;
                if (remaining < 0) {
                    stockLeft.textContent = "❌ Exceeds available stock!";
                    stockLeft.classList.add("text-danger");
                    stockLeft.classList.remove("text-muted");
                } else {
                    stockLeft.textContent = "Stock after dispensing: " + remaining;
                    stockLeft.classList.remove("text-danger");
                    stockLeft.classList.add("text-muted");
                }
            } else {
                stockLeft.textContent = "";
            }
        });
    })();
</script>
