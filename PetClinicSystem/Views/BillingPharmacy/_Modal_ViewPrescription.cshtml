@model PetClinicSystem.Models.Prescription

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Prescription Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="mb-3">
        <h5 class="mb-0">@Model.Pet?.Name</h5>
        <small class="text-muted">@Model.Pet?.Owner?.FullName</small>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Medication</dt>
        <dd class="col-sm-9">@Model.Medication</dd>

        <dt class="col-sm-3">Dosage</dt>
        <dd class="col-sm-9">@Model.Dosage</dd>

        <dt class="col-sm-3">Frequency</dt>
        <dd class="col-sm-9">@Model.Frequency</dd>

        <dt class="col-sm-3">Duration</dt>
        <dd class="col-sm-9">@Model.Duration</dd>

        <dt class="col-sm-3">Doctor</dt>
        <dd class="col-sm-9">@Model.Staff?.FullName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("MMM dd, yyyy")</dd>

        @if (!string.IsNullOrWhiteSpace(Model.Notes))
        {
            <dt class="col-sm-3">Notes</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        }
    </dl>
</div>

<div class="modal-footer border-0">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>
