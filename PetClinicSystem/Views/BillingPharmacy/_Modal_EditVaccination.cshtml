@model PetClinicSystem.Models.Vaccination

@{
    var pets = ViewBag.Pets as List<PetClinicSystem.Models.Pet>;
    var staff = ViewBag.Staff as List<PetClinicSystem.Models.Account>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Edit Vaccination</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editVaccinationForm"
      method="post"
      action="@Url.Action("EditVaccination", "BillingPharmacy")">
    <input type="hidden" name="VaccinationId" value="@Model.VaccinationId" />

    <div class="modal-body">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="">Select patient...</option>
                    @if (pets != null)
                    {
                        foreach (var p in pets)
                        {
                            <option value="@p.PetId"
                                    selected="@(p.PetId == Model.PetId ? "selected" : null)">
                                @p.Name (@p.Owner.FullName)
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Doctor</label>
                <select name="StaffId" class="form-select" required>
                    <option value="">Select doctor...</option>
                    @if (staff != null)
                    {
                        foreach (var s in staff)
                        {
                            <option value="@s.AccountId"
                                    selected="@(s.AccountId == Model.StaffId ? "selected" : null)">
                                @s.FullName
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Vaccine Name</label>
                <input name="VaccineName" class="form-control" value="@Model.VaccineName" required />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Date Given</label>
                <input type="date"
                       name="DateGiven"
                       class="form-control"
                       value="@Model.DateGiven?.ToString("yyyy-MM-dd")" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Next Due</label>
                <input type="date"
                       name="NextDueDate"
                       class="form-control"
                       value="@Model.NextDueDate?.ToString("yyyy-MM-dd")" />
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
</form>
