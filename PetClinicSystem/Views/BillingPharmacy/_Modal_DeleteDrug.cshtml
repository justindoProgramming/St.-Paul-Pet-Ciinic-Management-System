@model PetClinicSystem.Models.Drug

<div class="modal-header border-0">
    <h5 class="modal-title fw-semibold text-danger">Delete Drug</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="deleteDrugForm" action="@Url.Action("DeleteDrugConfirmed", "BillingPharmacy")" method="post">
    <div class="modal-body">
        <p>Are you sure you want to delete this drug?</p>
        <p class="fw-bold mb-1">@Model.DrugName</p>
        <p class="text-muted small mb-0">
            Dosage type: @Model.DosageType
        </p>
        <input type="hidden" name="id" value="@Model.DrugId" />
    </div>

    <div class="modal-footer bg-light">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger px-4">Delete</button>
    </div>
</form>
