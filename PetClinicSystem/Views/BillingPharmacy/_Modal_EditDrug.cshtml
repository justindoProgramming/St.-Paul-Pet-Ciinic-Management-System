@model PetClinicSystem.Models.Drug

<div class="modal-header">
    <h5 class="modal-title fw-bold">Edit Drug</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="editDrugForm" method="post" action="@Url.Action("EditDrug", "BillingPharmacy")">
    @Html.AntiForgeryToken()
    <input asp-for="DrugId" type="hidden" />

    <div class="modal-body">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-semibold">Drug Name</label>
                <input asp-for="DrugName" class="form-control" required />
                <span asp-validation-for="DrugName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Dosage Type</label>
                <select asp-for="DosageType" class="form-select" required>
                    <option value="">Select type...</option>
                    <option>Tablet</option>
                    <option>Capsule</option>
                    <option>Liquid</option>
                    <option>Injectable</option>
                    <option>Topical</option>
                    <option>Eye Drops</option>
                    <option>Ear Drops</option>
                    <option>Suspension</option>
                    <option>Other</option>
                </select>
                <span asp-validation-for="DosageType" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Quantity</label>
                <input asp-for="Quantity" type="number" min="0" class="form-control" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Unit Price</label>
                <div class="input-group">
                    <span class="input-group-text">₱</span>
                    <input asp-for="UnitPrice"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control"
                           required />
                </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Base Price (optional)</label>
                <div class="input-group">
                    <span class="input-group-text">₱</span>
                    <input asp-for="BasePrice"
                           type="number"
                           step="0.01"
                           min="0"
                           class="form-control" />
                </div>
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Expiration Date</label>
                <input asp-for="ExpiryDate" type="date" class="form-control" required />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Restock Notes (optional)</label>
                <textarea asp-for="RestockNotes"
                          class="form-control"
                          rows="2"></textarea>
                <span asp-validation-for="RestockNotes" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Date Added</label>
                <input class="form-control"
                       type="text"
                       value="@(Model.DateAdded.HasValue? Model.DateAdded.Value.ToString("yyyy-MM-dd HH:mm") : "Not set")"
                       readonly />
            </div>

        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
