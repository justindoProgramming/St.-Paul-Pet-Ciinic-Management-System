@model PetClinicSystem.Models.Prescription

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold text-danger">Delete Prescription</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="deletePrescriptionForm"
      method="post"
      action="@Url.Action("DeletePrescriptionConfirmed", "BillingPharmacy")">
    <input type="hidden" name="id" value="@Model.PrescriptionId" />

    <div class="modal-body">
        <p>Are you sure you want to delete this prescription?</p>
        <p class="mb-0">
            <strong>@Model.Pet?.Name</strong> — @Model.Medication<br />
            <span class="text-muted">
                Doctor: @Model.Staff?.FullName<br />
                Date: @Model.Date.ToString("MMM dd, yyyy")
            </span>
        </p>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
