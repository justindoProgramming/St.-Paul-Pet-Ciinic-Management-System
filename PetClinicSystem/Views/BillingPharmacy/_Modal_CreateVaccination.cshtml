@model PetClinicSystem.Models.Vaccination

@{
    var pets = ViewBag.Pets as List<PetClinicSystem.Models.Pet>;
    var staff = ViewBag.Staff as List<PetClinicSystem.Models.Account>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Record Vaccination</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="createVaccinationForm"
      method="post"
      action="@Url.Action("CreateVaccination", "BillingPharmacy")">
    <div class="modal-body">
        <div class="row g-3">

            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="" disabled selected>Select patient...</option>
                    @if (pets != null)
                    {
                        foreach (var p in pets)
                        {
                            <option value="@p.PetId">@p.Name (@p.Owner.FullName)</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Doctor</label>
                <select name="StaffId" class="form-select" required>
                    <option value="" disabled selected>Select doctor...</option>
                    @if (staff != null)
                    {
                        foreach (var s in staff)
                        {
                            <option value="@s.AccountId">@s.FullName</option>
                        }
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Vaccination Service</label>
                <select name="VaccineName" class="form-select" required>
                    <option value="" selected disabled>Select vaccination service…</option>

                    @foreach (var svc in (List<Service>)ViewBag.VaccinationServices)
                    {
                        <option value="@svc.Name">@svc.Name — ₱@svc.Price</option>
                    }
                </select>
            </div>


            <div class="col-md-3">
                <label class="form-label fw-semibold">Date Given</label>
                <input type="date"
                       name="DateGiven"
                       class="form-control"
                       value="@(Model.DateGiven?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" />
            </div>

            <div class="col-md-3">
                <label class="form-label fw-semibold">Next Due</label>
                <input type="date"
                       name="NextDueDate"
                       class="form-control"
                       value="@(Model.NextDueDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.AddYears(1).ToString("yyyy-MM-dd"))" />
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save</button>
    </div>
</form>
