@model List<PetClinicSystem.Models.Drug>

@if (Model == null || !Model.Any())
{
    <div class="text-center text-secondary py-5">
        No drugs in inventory yet.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="fw-bold mb-0">Drugs Inventory</h5>
        <button class="btn btn-success" onclick="loadDrugCreate()">
            + Add Drug
        </button>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <input type="text"
                   class="form-control"
                   placeholder="Search drugs by name or dosage type..."
                   oninput="filterDrugs(this.value)" />
        </div>
    </div>

    <div class="table-responsive">
        <table class="table align-middle" id="drugsTable">
            <thead class="table-light">
                <tr>
                    <th>Drug Name</th>
                    <th>Dosage Type</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Expiry Date</th>
                    <th style="width: 150px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model)
                {
                    <tr>
                        <td>@d.DrugName</td>
                        <td>@d.DosageType</td>
                        <td>@d.Quantity</td>
                        <td>@d.UnitPrice.ToString("C")</td>
                        <td>
                            @(d.ExpiryDate == DateTime.MinValue
                                                ? ""
                                                : d.ExpiryDate.ToString("MMM dd, yyyy"))
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <button class="btn btn-warning text-white"
                                        onclick="loadDrugEdit(@d.DrugId)">
                                    Edit
                                </button>
                                <button class="btn btn-danger"
                                        onclick="loadDrugDelete(@d.DrugId)">
                                    Delete
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
