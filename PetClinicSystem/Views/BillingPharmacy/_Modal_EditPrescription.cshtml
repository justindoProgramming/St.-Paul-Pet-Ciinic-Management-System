@model PetClinicSystem.Models.Prescription

@{
    var pets = ViewBag.Pets as List<PetClinicSystem.Models.Pet>;
    var staff = ViewBag.Staff as List<PetClinicSystem.Models.Account>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Edit Prescription</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="editPrescriptionForm"
      method="post"
      action="@Url.Action("EditPrescription", "BillingPharmacy")">
    <input type="hidden" name="PrescriptionId" value="@Model.PrescriptionId" />

    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="">Select patient...</option>
                    @if (pets != null)
                    {
                        foreach (var pet in pets)
                        {
                            if (pet.PetId == Model.PetId)
                            {
                                <option value="@pet.PetId" selected="selected">
                                    @pet.Name (@pet.Owner.FullName)
                                </option>
                            }
                            else
                            {
                                <option value="@pet.PetId">
                                    @pet.Name (@pet.Owner.FullName)
                                </option>
                            }
                        }
                    }
                </select>
            </div>

            <!-- DOCTOR -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Doctor</label>
                <select name="StaffId" class="form-select" required>
                    <option value="">Select doctor...</option>
                    @if (staff != null)
                    {
                        foreach (var doc in staff)
                        {
                            if (doc.AccountId == Model.StaffId)
                            {
                                <option value="@doc.AccountId" selected="selected">
                                    @doc.FullName
                                </option>
                            }
                            else
                            {
                                <option value="@doc.AccountId">
                                    @doc.FullName
                                </option>
                            }
                        }
                    }
                </select>
            </div>

            <!-- MEDICATION / DOSAGE / FREQUENCY / DURATION -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Medication</label>
                <input name="Medication" class="form-control" value="@Model.Medication" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Dosage</label>
                <input name="Dosage" class="form-control" value="@Model.Dosage" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Frequency</label>
                <input name="Frequency" class="form-control" value="@Model.Frequency" required />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-semibold">Duration</label>
                <input name="Duration" class="form-control" value="@Model.Duration" required />
            </div>

            <div class="col-12">
                <label class="form-label fw-semibold">Notes</label>
                <textarea name="Notes" class="form-control" rows="3">@Model.Notes</textarea>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-semibold">Date</label>
                <input type="date"
                       name="Date"
                       class="form-control"
                       value="@Model.Date.ToString("yyyy-MM-dd")" />
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
</form>
