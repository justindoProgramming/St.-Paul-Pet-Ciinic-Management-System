<!-- Search box -->
<input id="searchServices"
       type="text"
       class="form-control"
       placeholder="Search services or products..." />

<!-- Services list container -->
<div class="row g-3 mt-3" id="serviceList">
    @* cards are injected by pos.js *@
</div>

<!-- In the Current Sale card on the right -->
<select id="petSelect" class="form-select">
    <option value="" selected disabled>Choose patient...</option>
    @* your foreach over ViewBag.Pets stays the same *@
</select>

<!-- Subtotal / Tax / Total placeholders -->
<div class="d-flex justify-content-between">
    <span>Subtotal:</span>
    <span id="subtotal">₱0.00</span>
</div>
<div class="d-flex justify-content-between">
    <span>Tax (8%):</span>
    <span id="tax">₱0.00</span>
</div>
<div class="d-flex justify-content-between fw-bold">
    <span>Total:</span>
    <span id="total">₱0.00</span>
</div>

<!-- Process Payment button -->
<button type="button"
        id="payButton"
        class="btn btn-success w-100 mt-3"
        onclick="checkout()">
    <i class="fa-solid fa-cash-register me-2"></i> Process Payment
</button>
