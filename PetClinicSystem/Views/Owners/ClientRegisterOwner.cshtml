@model PetClinicSystem.Models.Owner
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Register as Owner";
    ViewBag.ActiveMenu = "RegisterOwner";

    int role = Context.Session.GetInt32("UserRole") ?? -1;

    if (role == 0)
    {
        Layout = "~/Views/Shared/_Layout_Client.cshtml";
    }
    else if (role == 1)
    {
        Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    }
    else if (role == 2)
    {
        Layout = "~/Views/Shared/_Layout_Staff.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h3 class="fw-bold mb-1">Register as Owner</h3>
                    <p class="text-muted mb-0">
                        Please provide your contact details. These will be used as the owner information for your pets.
                    </p>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-3 p-md-4">

                    <form asp-controller="Owners"
                          asp-action="RegisterAsOwner"
                          method="post">

                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="row g-3">
                            <!-- Left column -->
                            <div class="col-md-6">

                                <!-- Full Name -->
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-semibold">Full name</label>
                                    <input asp-for="FullName" class="form-control" required />
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>

                                <!-- Phone -->
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone number</label>
                                    <input asp-for="PhoneNumber" class="form-control" required />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>

                                <!-- Email -->
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Right column -->
                            <div class="col-md-6">

                                <!-- Address -->
                                <div class="mb-3">
                                    <label asp-for="Address" class="form-label fw-semibold">Address</label>
                                    <textarea asp-for="Address"
                                              class="form-control"
                                              rows="4"></textarea>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>

                                <!-- Emergency Contacts -->
                                <div class="mb-3">
                                    <label asp-for="EmergencyContact1" class="form-label fw-semibold">
                                        Emergency contact #1
                                    </label>
                                    <input asp-for="EmergencyContact1" class="form-control" />
                                    <span asp-validation-for="EmergencyContact1" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="EmergencyContact2" class="form-label fw-semibold">
                                        Emergency contact #2 (optional)
                                    </label>
                                    <input asp-for="EmergencyContact2" class="form-control" />
                                    <span asp-validation-for="EmergencyContact2" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-controller="ClientRecords"
                               asp-action="Index"
                               class="btn btn-outline-secondary">
                                Cancel
                            </a>

                            <button type="submit" class="btn btn-success">
                                Save
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
