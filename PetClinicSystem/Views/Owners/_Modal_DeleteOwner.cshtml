@model PetClinicSystem.Models.Owner

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Delete Owner</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="deleteOwnerForm" method="post" action="/Owners/DeleteOwnerConfirmed">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.OwnerId" />

    <div class="modal-body">
        <p class="mb-0">
            Are you sure you want to delete
            <strong>@Model.FullName</strong>?
        </p>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
    