@model PetClinicSystem.Models.Account

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold text-danger">Delete User</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form id="deleteAccountForm"
      method="post"
      action="@Url.Action("DeleteAccountConfirmed", "ManageAccounts")">

    <input type="hidden" name="id" value="@Model.AccountId" />

    <div class="modal-body">
        <p>Are you sure you want to delete this user? This action cannot be undone.</p>

        <h5 class="fw-bold mb-1">@Model.FullName</h5>
        <p class="mb-1 text-muted">@Model.Email</p>
        <p class="mb-0">
            <span class="badge bg-secondary">@Model.Username</span>
        </p>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
