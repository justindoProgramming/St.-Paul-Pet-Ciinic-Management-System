@model List<PetClinicSystem.Models.Account>

@functions {
    string RoleName(int role)
    {
        // 0 = Client, 1 = Admin, 2 = Staff
        return role == 1 ? "Administrator"
             : role == 2 ? "Staff"
             : "Client";
    }

    string RoleBadgeClass(int role)
    {
        return role == 1 ? "bg-primary-subtle text-primary"
             : role == 2 ? "bg-info-subtle text-info"
             : "bg-secondary-subtle text-secondary";
    }

    string Initials(string name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Trim().Split(' ');
        if (parts.Length == 1) return parts[0][0].ToString().ToUpper();
        return (parts[0][0].ToString() + parts[parts.Length - 1][0]).ToUpper();
    }
}

@if (Model == null || !Model.Any())
{
    <div class="text-center text-secondary py-5">
        <i class="fa-regular fa-circle-user fa-3x mb-3"></i>
        <p class="mb-0 fw-semibold">No staff accounts yet.</p>
        <p class="mb-0">Use the <strong>Add User</strong> button to create one.</p>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var acc in Model)
        {
            <div class="col account-card-wrapper">
                <div class="card border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body d-flex flex-column">

                        <!-- Top: avatar + main info + status -->
                        <div class="d-flex justify-content-between mb-3">
                            <div class="d-flex gap-3">
                                <!-- Avatar circle -->
                                <div class="user-avatar-circle">
                                    <span>@Initials(acc.FullName)</span>
                                </div>

                                <div>
                                    <h5 class="fw-bold mb-1">@acc.FullName</h5>
                                    <span class="badge rounded-pill px-3 @RoleBadgeClass(acc.IsAdmin)">
                                        @RoleName(acc.IsAdmin)
                                    </span>
                                </div>
                            </div>

                            <button type="button"
                                    class="btn btn-sm rounded-pill fw-semibold @(acc.IsActive ? "btn-outline-success" : "btn-outline-secondary")"
                                    disabled>
                                @(acc.IsActive ? "Active" : "Inactive")
                            </button>
                        </div>

                        <!-- Contact info -->
                        <div class="mb-2 small text-secondary">
                            <div class="mb-1">
                                <i class="fa-regular fa-envelope me-2"></i>@acc.Email
                            </div>
                            <div class="mb-1">
                                <i class="fa-regular fa-user me-2"></i>@acc.Username
                            </div>
                        </div>

                        <!-- Bottom meta row -->
                        <div class="d-flex justify-content-between align-items-center small text-secondary mb-3">
                            <span>Account</span>
                            <span>Joined @acc.CreatedAt.ToString("MMM yyyy")</span>
                        </div>

                        <!-- Actions row -->
                        <div class="d-flex align-items-center gap-2 pt-2 border-top">
                            <button class="btn btn-light flex-grow-1 d-flex align-items-center justify-content-center gap-2 py-2"
                                    onclick="loadAccountEdit(@acc.AccountId)">
                                <i class="fa-regular fa-pen-to-square"></i>
                                <span class="fw-semibold">Edit</span>
                            </button>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .user-avatar-circle {
        width: 56px;
        height: 56px;
        border-radius: 999px;
        background: radial-gradient(circle at 25% 0, #4f46e5 0, #0ea5e9 35%, #06b6d4 70%, #22c55e 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 700;
        letter-spacing: 0.03em;
        box-shadow: 0 8px 16px rgba(15, 23, 42, 0.25);
    }

    .bg-primary-subtle {
        background-color: rgba(37, 99, 235, 0.08);
    }

    .bg-info-subtle {
        background-color: rgba(56, 189, 248, 0.08);
    }

    .bg-secondary-subtle {
        background-color: rgba(148, 163, 184, 0.12);
    }
</style>
