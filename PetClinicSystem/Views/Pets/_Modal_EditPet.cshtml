@model PetClinicSystem.Models.Pet
@using PetClinicSystem.Models

@{
    var owners = ViewBag.Owners as List<Owner>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Edit Patient</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="editPetForm" method="post" action="/Pets/Edit">
    @Html.AntiForgeryToken()
    <input type="hidden" name="PetId" value="@Model.PetId" />

    <div class="modal-body">
        <div class="row g-3">

            <!-- OWNER -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Owner</label>
                <select name="OwnerId" class="form-select" required>
                    <option value="">Select owner…</option>
                    @if (owners != null)
                    {
                        foreach (var o in owners)
                        {
                            <option value="@o.OwnerId"
                                    selected="@(o.OwnerId == Model.OwnerId ? "selected" : null)">
                                @o.FullName
                            </option>
                        }
                    }
                </select>
            </div>


            <!-- PET NAME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Pet Name</label>
                <input name="Name" class="form-control" value="@Model.Name" required />
            </div>

            <!-- SPECIES -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Species</label>
                <input name="Species" class="form-control" value="@Model.Species" required />
            </div>

            <!-- BREED -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Breed</label>
                <input name="Breed" class="form-control" value="@Model.Breed" />
            </div>

            <!-- GENDER -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Gender</label>
                <select name="Gender" class="form-select">
                    <option value="">Select gender…</option>
                    <option value="Male"
                            selected="@(Model.Gender == "Male" ? "selected" : null)">Male</option>
                    <option value="Female"
                            selected="@(Model.Gender == "Female" ? "selected" : null)">Female</option>
                </select>
            </div>


            <!-- BIRTHDATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Birthdate</label>
                <input name="BirthDate"
                       type="date"
                       class="form-control"
                       value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
            </div>

            <!-- COLOR / MARKINGS -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Color / Markings</label>
                <input name="ColorMarkings" class="form-control" value="@Model.ColorMarkings" />
            </div>

            <!-- WEIGHT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Weight (kg)</label>
                <input name="Weight" type="number" step="0.01" class="form-control" value="@Model.Weight" />
            </div>

            <!-- MEDICAL HISTORY -->
            <div class="col-12">
                <label class="form-label fw-semibold">Medical History</label>
                <textarea name="MedicalHistory" class="form-control" rows="3">@Model.MedicalHistory</textarea>
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
