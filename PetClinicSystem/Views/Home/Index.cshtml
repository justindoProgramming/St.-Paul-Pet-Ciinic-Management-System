@{
    Layout = "_Layout_Public";
}

@if (TempData["LogoutMessage"] != null)
{
    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999;">
        <div class="alert alert-success alert-dismissible fade show shadow">
            @TempData["LogoutMessage"]
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="alert"
                    aria-label="Close"></button>
        </div>
    </div>
}


<section class="py-5">
    <div class="container">
        <div class="row align-items-center">

            <!-- LEFT TEXT -->
            <div class="col-lg-6">

                <h6 class="text-secondary mb-3">Welcome!</h6>

                <h1 class="fw-bold display-6 mb-4">
                    St. Paul Clinic
                </h1>

                <p class="text-secondary mb-4">
                    Providing compassionate, reliable, and expert veterinary care to ensure every pet receives the love, comfort, and medical attention they deserve, from routine checkups to advanced treatments.
                </p>

                <div class="d-flex gap-3 mb-4">
                    <button class="btn btn-success px-4 py-2 rounded" data-bs-toggle="modal" data-bs-target="#signupModal">
                        Get Started 
                    </button>
                </div>

                

            </div>

            <!-- RIGHT IMAGE -->
            <div class="col-lg-6 text-center mt-4 mt-lg-0">
                <img src="~/images/pets.jpg"
                     alt="Logo"
                     style="height:700px; width:auto; border-radius:20px" />
            </div>

        </div>
    </div>
</section>
