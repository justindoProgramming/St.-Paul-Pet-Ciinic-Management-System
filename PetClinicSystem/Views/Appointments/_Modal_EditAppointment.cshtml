@model PetClinicSystem.Models.Schedule
@using PetClinicSystem.Models

@{
    var pets = ViewBag.Pets as List<Pet>;
    var staff = ViewBag.Staff as List<Account>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Edit Appointment</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form method="post" action="/Appointments/Edit">
    <input type="hidden" name="ScheduleId" value="@Model.ScheduleId" />

    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="">Select patient…</option>
                    @if (pets != null)
                    {
                        foreach (var p in pets)
                        {
                            <option value="@p.PetId"
                                    selected="@(p.PetId == Model.PetId ? "selected" : null)">
                                @p.Name (@p.Owner.FullName)
                            </option>
                        }
                    }
                </select>
            </div>

            <!-- STAFF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Assigned Staff</label>
                <select name="StaffId" class="form-select" required>
                    <option value="">Select staff…</option>
                    @if (staff != null)
                    {
                        foreach (var s in staff)
                        {
                            <option value="@s.AccountId"
                                    selected="@(s.AccountId == Model.StaffId ? "selected" : null)">
                                @s.FullName
                            </option>
                        }
                    }
                </select>
            </div>

            <!-- SERVICE -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">Service</label>
                <input name="Service" class="form-control" value="@Model.Service" required />
            </div>

            <!-- DATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Date</label>
                <input name="ScheduleDateOld"
                       type="date"
                       class="form-control"
                       value="@(Model.ScheduleDateOld?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
                       required />
            </div>

            <!-- TIME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Time</label>
                <input name="ScheduleTime"
                       type="time"
                       class="form-control"
                       value="@(Model.ScheduleTime?.ToString(@"hh\:mm") ?? "")"
                       required />
            </div>

            <!-- STATUS -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Status</label>
                <select name="Status" class="form-select">
                    <option value="Pending" selected="@(Model.Status == "Pending" ? "selected" : null)">Pending</option>
                    <option value="Confirmed" selected="@(Model.Status == "Confirmed" ? "selected" : null)">Confirmed</option>
                    <option value="Completed" selected="@(Model.Status == "Completed" ? "selected" : null)">Completed</option>
                    <option value="Cancelled" selected="@(Model.Status == "Cancelled" ? "selected" : null)">Cancelled</option>
                </select>
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
