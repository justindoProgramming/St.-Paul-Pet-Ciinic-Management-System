@model PetClinicSystem.Models.Schedule
@using PetClinicSystem.Models
@using Microsoft.AspNetCore.Http

@{
    var pets     = ViewBag.Pets     as List<Pet>;
    var staff    = ViewBag.Staff    as List<Account>;
    var services = ViewBag.Services as List<Service>;

    // 0 = Client, 1 = Admin, 2 = Staff
    int role = Context.Session.GetInt32("UserRole") ?? -1;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Edit Appointment</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-controller="Appointments"
      asp-action="Edit"
      method="post">
    @Html.AntiForgeryToken()
    <input asp-for="ScheduleId" type="hidden" />

    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select asp-for="PetId" class="form-select" required>
                    <option value="">Select patient…</option>
                    @foreach (var p in pets ?? new List<Pet>())
                    {
                        <option value="@p.PetId">
                            @p.Name (@p.Owner.FullName)
                        </option>
                    }
                </select>
                <span asp-validation-for="PetId" class="text-danger"></span>
            </div>

            <!-- STAFF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Assigned Staff</label>
                <select asp-for="StaffId" class="form-select" required>
                    <option value="">Select staff…</option>
                    @foreach (var s in staff ?? new List<Account>())
                    {
                        <option value="@s.AccountId">
                            @s.FullName
                        </option>
                    }
                </select>
                <span asp-validation-for="StaffId" class="text-danger"></span>
            </div>

            <!-- SERVICE -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">Service</label>
                <select asp-for="ServiceId" class="form-select" required>
                    <option value="">Select service…</option>

                    @foreach (var group in (services ?? new List<Service>()).GroupBy(x => x.Category))
                    {
                        <optgroup label="@group.Key">
                            @foreach (var svc in group)
                            {
                                <option value="@svc.ServiceId">
                                    @svc.Name (₱@svc.Price.ToString("N2"))
                                </option>
                            }
                        </optgroup>
                    }
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <!-- DATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Date</label>
                <input asp-for="ScheduleDateOld"
                       type="date"
                       class="form-control"
                       value="@(Model.ScheduleDateOld?.ToString("yyyy-MM-dd"))"
                       required />
                <span asp-validation-for="ScheduleDateOld" class="text-danger"></span>
            </div>

            <!-- TIME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Time</label>
                <input asp-for="ScheduleTime"
                       type="time"
                       class="form-control"
                       value="@(Model.ScheduleTime?.ToString(@"hh\:mm"))"
                       required />
                <span asp-validation-for="ScheduleTime" class="text-danger"></span>
            </div>

            <!-- STATUS (user-based, same idea as create) -->
            @if (role == 0) 
            {
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <!-- show as read-only text -->
                    <input type="text" class="form-control" value="@Model.Status ?? "Pending"" readonly />
                    <!-- keep current status value in hidden input so model binds -->
                    <input type="hidden" name="Status" value="@Model.Status ?? "Pending"" />
                </div>
            }
            else
            {
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <select asp-for="Status" class="form-select">
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Urgent">Urgent</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            }

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
