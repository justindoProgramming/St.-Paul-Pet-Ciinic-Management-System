@model PetClinicSystem.Models.Schedule

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Appointment Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<div class="modal-body">
    <div class="rounded-4 shadow-sm p-4">

        <h6 class="fw-bold mb-2">Appointment Info</h6>
        <p class="text-secondary">
            <strong>Service:</strong> @(Model.Service?.Name ?? "-") <br />
            <strong>Date:</strong> @Model.ScheduleDateOld?.ToString("MMM dd, yyyy") <br />
            <strong>Time:</strong>
            @(Model.Slot != null ?
                        $"{Model.Slot.StartTime:hh\\:mm} - {Model.Slot.EndTime:hh\\:mm}" :
                        "-") <br />
            <strong>Status:</strong> @Model.Status
        </p>

        <hr />

        <h6 class="fw-bold">Patient</h6>
        <p class="text-secondary">
            <strong>Name:</strong> @Model.Pet?.Name <br />
            <strong>Species:</strong> @Model.Pet?.Species <br />
            <strong>Breed:</strong> @Model.Pet?.Breed
        </p>

        <hr />

        <h6 class="fw-bold">Owner</h6>
        <p class="text-secondary">
            <strong>Name:</strong> @Model.Pet?.Owner?.FullName <br />
            <strong>Phone:</strong> @Model.Pet?.Owner?.PhoneNumber <br />
            <strong>Email:</strong> @Model.Pet?.Owner?.Email
        </p>

        <hr />

        <h6 class="fw-bold">Assigned Staff</h6>
        <p class="text-secondary">
            @Model.Staff?.FullName
        </p>

    </div>
</div>

<div class="modal-footer border-0">
    <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
</div>
