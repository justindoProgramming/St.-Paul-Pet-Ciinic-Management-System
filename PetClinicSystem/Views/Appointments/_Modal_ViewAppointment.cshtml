@model PetClinicSystem.Models.Schedule

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Appointment Details</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="border rounded-4 p-4 shadow-sm">

        <h6 class="fw-bold mb-2">Appointment Info</h6>
        <div class="text-secondary mb-3">
            <div><strong>Service:</strong> @Model.Service</div>
            <div><strong>Date:</strong> @(Model.ScheduleDateOld?.ToString("MMM dd, yyyy") ?? "-")</div>
            <div><strong>Time:</strong> @(Model.ScheduleTime?.ToString(@"hh\:mm") ?? "-")</div>
            <div><strong>Status:</strong> @Model.Status</div>
        </div>

        <hr />

        <h6 class="fw-bold mb-2">Patient</h6>
        <div class="text-secondary mb-3">
            <div><strong>Name:</strong> @Model.Pet?.Name</div>
            <div><strong>Species:</strong> @Model.Pet?.Species</div>
            <div><strong>Breed:</strong> @Model.Pet?.Breed</div>
        </div>

        <hr />

        <h6 class="fw-bold mb-2">Owner</h6>
        <div class="text-secondary mb-3">
            <div><strong>Name:</strong> @Model.Pet?.Owner?.FullName</div>
            <div><strong>Phone:</strong> @Model.Pet?.Owner?.PhoneNumber</div>
            <div><strong>Email:</strong> @Model.Pet?.Owner?.Email</div>
        </div>

        <hr />

        <h6 class="fw-bold mb-2">Assigned Staff</h6>
        <div class="text-secondary">
            <div><strong>Name:</strong> @Model.Staff?.FullName</div>
        </div>

    </div>
</div>

<div class="modal-footer border-0">
    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
</div>
