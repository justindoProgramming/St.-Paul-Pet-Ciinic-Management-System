@model PetClinicSystem.Models.Schedule

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Delete Appointment</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form method="post" action="/Appointments/DeleteConfirmed">
    <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />

    <div class="modal-body">
        <p class="mb-0">
            Are you sure you want to delete the appointment for
            <strong>@Model.Pet?.Name</strong>
            on
            <strong>@(Model.ScheduleDateOld?.ToString("MMM dd, yyyy") ?? "-")</strong>?
        </p>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
