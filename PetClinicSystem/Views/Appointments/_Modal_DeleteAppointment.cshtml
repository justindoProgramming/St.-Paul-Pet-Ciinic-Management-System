@model PetClinicSystem.Models.Schedule

<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content p-4 rounded-4 shadow">

        <h4 class="fw-bold mb-3">Delete Appointment?</h4>

        <p>
            Are you sure you want to delete the appointment for
            <strong>@Model.Pet.Name</strong> on
            <strong>@Model.ScheduleDateOld.("MMM dd, yyyy")</strong>?
        </p>

        <form method="post" action="/Appointments/DeleteConfirmed">

            <input type="hidden" name="scheduleId" value="@Model.ScheduleId" />

            <div class="mt-3 text-end">
                <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-danger">Delete</button>
            </div>

        </form>

    </div>
</div>
