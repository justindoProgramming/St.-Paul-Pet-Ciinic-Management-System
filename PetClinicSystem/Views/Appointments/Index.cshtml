@model List<PetClinicSystem.Models.Schedule>
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Appointments";

    int role = Context.Session.GetInt32("UserRole") ?? -1;

    Layout = role switch
    {
        1 => "~/Views/Shared/_Layout_Admin.cshtml",
        2 => "~/Views/Shared/_Layout_Staff.cshtml",
        0 => "~/Views/Shared/_Layout_Client.cshtml",
        _ => "~/Views/Shared/_Layout_Public.cshtml"
    };
}

<div class="container py-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold">Appointments</h3>

        <!-- SUCCESS TOAST -->
        @if (TempData["Success"] != null)
        {
            <script>
                window.onload = function () {
                    if (window.showSuccessToast) {
                        showSuccessToast("@TempData["Success"]");
                    }
                }
            </script>
        }

        <!-- SEARCH + NEW BUTTON -->
        <div class="d-flex gap-2">
            <input id="searchBox"
                   type="text"
                   class="form-control"
                   placeholder="Search appointments..."
                   style="max-width: 250px;"
                   value="@(ViewBag.Search ?? "")" />

            <button class="btn btn-outline-secondary" type="button" onclick="applySearch()">
                Search
            </button>

            <button class="btn btn-success"
                    onclick="loadCreate()">
                <i class="fa-solid fa-plus"></i> New Appointment
            </button>
        </div>
    </div>

    <!-- APPOINTMENT LIST -->
    <div class="row g-3">

        @foreach (var appt in Model)
        {
            string slotStart = appt.Slot?.StartTime.ToString(@"hh\:mm") ?? "";
            string slotEnd = appt.Slot?.EndTime.ToString(@"hh\:mm") ?? "";

            <div class="col-12">
                <div class="card shadow-sm border-0 rounded-4 p-3 appointment-card">
                    <div class="row g-0">

                        <!-- TIME SECTION -->
                        <div class="col-md-2 d-flex flex-column align-items-center justify-content-center border-end">
                            <h5 class="fw-bold text-success mb-0">
                                @(appt.Slot != null ? $"{slotStart} - {slotEnd}" : "No Slot")
                            </h5>
                            <small class="text-secondary">
                                @appt.ScheduleDateOld?.ToString("MMM dd, yyyy")
                            </small>
                        </div>

                        <!-- MAIN INFO -->
                        <div class="col-md-7 px-4">
                            <h5 class="fw-bold mb-1">@appt.Pet?.Name</h5>
                            <div class="text-secondary small">
                                @appt.Pet?.Species - @appt.Pet?.Breed
                            </div>

                            <div class="mt-3">
                                <h6 class="fw-semibold mb-0">Owner</h6>
                                <span class="text-secondary">
                                    @appt.Pet?.Owner?.FullName • @appt.Pet?.Owner?.PhoneNumber
                                </span>
                            </div>

                            <div class="mt-3">
                                <h6 class="fw-semibold mb-0">Assigned Staff</h6>
                                <span class="text-secondary">
                                    @appt.Staff?.FullName
                                </span>
                            </div>
                        </div>

                        <!-- STATUS & ACTIONS -->
                        <div class="col-md-3 d-flex flex-column align-items-end justify-content-between">

                            <!-- STATUS BADGE -->
                            <div>
                                @switch (appt.Status?.ToLower())
                                {
                                    case "confirmed":
                                        <span class="badge bg-primary rounded-pill px-3 py-2">Confirmed</span>
                                        break;
                                    case "pending":
                                        <span class="badge bg-secondary rounded-pill px-3 py-2">Pending</span>
                                        break;
                                    case "urgent":
                                        <span class="badge bg-danger rounded-pill px-3 py-2">Urgent</span>
                                        break;
                                    case "completed":
                                        <span class="badge bg-success rounded-pill px-3 py-2">Completed</span>
                                        break;
                                    default:
                                        <span class="badge bg-dark rounded-pill px-3 py-2">@appt.Status</span>
                                        break;
                                }
                            </div>

                            <!-- BUTTONS -->
                            <div class="d-flex gap-2 mt-3">
                                <button class="btn btn-outline-success"
                                        onclick="loadView(@appt.ScheduleId)">
                                    View
                                </button>

                                @if (role == 1 || role == 2)
                                {
                                    <button class="btn btn-outline-primary"
                                            onclick="loadEdit(@appt.ScheduleId)">
                                        Edit
                                    </button>
                                }
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        }

    </div>
</div>

<!-- MODALS -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="viewModalContent"></div>
    </div>
</div>

<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="createModalContent"></div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="editModalContent"></div>
    </div>
</div>

@section Scripts {
    <style>
        .time-slot {
            padding: 8px 12px;
            border-radius: 6px;
            border: 1px solid #ccc;
            cursor: pointer;
            min-width: 75px;
            text-align: center;
            user-select: none;
            transition: 0.2s;
            font-weight: 500;
        }

            .time-slot:hover {
                background: #f3f3f3;
            }

            .time-slot.selected {
                background: #198754;
                color: white;
                border-color: #198754;
            }
    </style>

    <script>

        // --------------------------------------------------------------------
        //  MAIN MODAL LOADERS
        // --------------------------------------------------------------------

        function loadCreate() {
            $("#createModalContent").load('/Appointments/Create', function () {
                new bootstrap.Modal(document.getElementById("createModal")).show();
            });
        }

        function loadEdit(id) {
            $("#editModalContent").load(`/Appointments/Edit/${id}`, function () {
                new bootstrap.Modal(document.getElementById("editModal")).show();
            });
        }

        function loadView(id) {
            $("#viewModalContent").load(`/Appointments/ViewAppointment/${id}`, function () {
                new bootstrap.Modal(document.getElementById("viewModal")).show();
            });
        }


        // --------------------------------------------------------------------
        //  CREATE APPOINTMENT — TIME SLOT ENGINE
        // --------------------------------------------------------------------

        // Because modal loads dynamically, we use delegated events
        $(document).on("change", "#appointmentDate, #serviceDropdown", function () {

            let date = $("#appointmentDate").val();
            let serviceId = $("#serviceDropdown").val();

            if (date && serviceId) {
                loadTimeGrid(date, serviceId);
            }
        });

        function loadTimeGrid(date, serviceId) {

            if (!$("#timeGrid").length) return; // Modal not loaded yet

            $("#timeGrid").html("<div class='small text-muted'>Loading…</div>");
            $("#selectedSlotId").val("");

            $.get("/Appointments/GetValidStartTimes",
                { date: date, serviceId: serviceId },
                function (slots) {

                    $("#timeGrid").empty();

                    if (!slots || slots.length === 0) {
                        $("#timeGrid").html("<div class='text-danger small'>No available times</div>");
                        return;
                    }

                    slots.forEach(s => {
                        let slotBtn = $(`<div class='time-slot'>${s.start}</div>`);
                        slotBtn.data("slotId", s.slotId);

                        slotBtn.on("click", function () {
                            $(".time-slot").removeClass("selected");
                            $(this).addClass("selected");

                            $("#selectedSlotId").val($(this).data("slotId"));
                        });

                        $("#timeGrid").append(slotBtn);
                    });
                }
            );
        }

    </script>
}
