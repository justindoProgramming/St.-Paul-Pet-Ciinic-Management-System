@model PetClinicSystem.Models.Schedule
@using PetClinicSystem.Models

@{
    var pets = ViewBag.Pets as List<Pet>;
    var staff = ViewBag.Staff as List<Account>;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">New Appointment</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form method="post" action="/Appointments/Create">
    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="">Select patient…</option>
                    @if (pets != null)
                    {
                        foreach (var p in pets)
                        {
                            <option value="@p.PetId">
                                @p.Name (@p.Owner.FullName)
                            </option>
                        }
                    }
                </select>
            </div>

            <!-- STAFF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Assigned Staff</label>
                <select name="StaffId" class="form-select" required>
                    <option value="">Select staff…</option>
                    @if (staff != null)
                    {
                        foreach (var s in staff)
                        {
                            <option value="@s.AccountId">@s.FullName</option>
                        }
                    }
                </select>
            </div>

            <!-- SERVICE -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">Service</label>
                <input name="Service" class="form-control" placeholder="e.g., Check-up, Vaccination" required />
            </div>

            <!-- DATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Date</label>
                <input name="ScheduleDateOld"
                       type="date"
                       class="form-control"
                       value="@DateTime.Today.ToString("yyyy-MM-dd")"
                       required />
            </div>

            <!-- TIME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Time</label>
                <input name="ScheduleTime"
                       type="time"
                       class="form-control"
                       required />
            </div>

            <!-- STATUS -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Status</label>
                <select name="Status" class="form-select">
                    <option>Pending</option>
                    <option>Confirmed</option>
                    <option>Completed</option>
                    <option>Cancelled</option>
                </select>
            </div>

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Create Appointment</button>
    </div>
</form>
