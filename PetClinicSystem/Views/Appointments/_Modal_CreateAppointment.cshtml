@model PetClinicSystem.Models.Schedule
@using PetClinicSystem.Models
@using Microsoft.AspNetCore.Http

@{
    var pets = ViewBag.Pets as List<Pet>;
    var staff = ViewBag.Staff as List<Account>;
    var services = ViewBag.Services as List<Service>;

    // 0 = Client, 1 = Admin, 2 = Staff
    int role = Context.Session.GetInt32("UserRole") ?? -1;
}

<div class="modal-header border-0">
    <h5 class="modal-title fw-bold">Create Appointment</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>

<form asp-controller="Appointments"
      asp-action="Create"
      method="post">
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="row g-3">

            <!-- PATIENT -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Patient</label>
                <select name="PetId" class="form-select" required>
                    <option value="">Select patient…</option>
                    @foreach (var p in pets ?? new List<Pet>())
                    {
                        <option value="@p.PetId">@p.Name (@p.Owner.FullName)</option>
                    }
                </select>
            </div>

            <!-- STAFF -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Assigned Staff</label>
                <select name="StaffId" class="form-select" required>
                    <option value="">Select staff…</option>
                    @foreach (var s in staff ?? new List<Account>())
                    {
                        <option value="@s.AccountId">@s.FullName</option>
                    }
                </select>
            </div>

            <!-- SERVICE -->
            <div class="col-md-12">
                <label class="form-label fw-semibold">Service</label>
                <select name="ServiceId" class="form-select" required>
                    <option value="">Select service…</option>
                    @foreach (var group in (services ?? new List<Service>()).GroupBy(x => x.Category))
                    {
                        <optgroup label="@group.Key">
                            @foreach (var svc in group)
                            {
                                <option value="@svc.ServiceId">
                                    @svc.Name (₱@svc.Price.ToString("N2"))
                                </option>
                            }
                        </optgroup>
                    }
                </select>
            </div>

            <!-- DATE -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Date</label>
                <input type="date" name="ScheduleDateOld" class="form-control" required />
            </div>

            <!-- TIME -->
            <div class="col-md-6">
                <label class="form-label fw-semibold">Time</label>
                <input type="time" name="ScheduleTime" class="form-control" required />
            </div>

            <!-- STATUS (user-based, but simple) -->
            @if (role == 0)   // Client
            {
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <!-- visible as read-only text -->
                    <input type="text" class="form-control" value="Pending" readonly />
                    <!-- value actually posted -->
                    <input type="hidden" name="Status" value="Pending" />
                </div>
            }
            else
            {
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Status</label>
                    <select name="Status" class="form-select">
                        <option value="Pending">Pending</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Urgent">Urgent</option>
                    </select>
                </div>
            }

        </div>
    </div>

    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>
